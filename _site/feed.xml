  then &lt;span class=&quot;p&quot;&gt;$&lt;/span&gt;&lt;span class=&quot;nv&quot;&gt;\Sigma\vdash\forall&lt;/span&gt;&lt;span class=&quot;nb&quot;&gt; x.&lt;/span&gt;&lt;span class=&quot;nv&quot;&gt;\varphi&lt;/span&gt;&lt;span class=&quot;p&quot;&gt;$&lt;/span&gt; &lt;span class=&quot;p&quot;&gt;&amp;amp;&lt;/span&gt; &lt;span class=&quot;p&quot;&gt;$&lt;/span&gt;&lt;span class=&quot;nv&quot;&gt;\displaystyle\f&lt;/span&gt;&lt;span class=&quot;p&quot;&gt;{&lt;/span&gt;&lt;span class=&quot;nv&quot;&gt;\varphi&lt;/span&gt;&lt;span class=&quot;o&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;nb&quot;&gt;x&lt;/span&gt;&lt;span class=&quot;o&quot;&gt;/&lt;/span&gt;&lt;span class=&quot;nb&quot;&gt;u&lt;/span&gt;&lt;span class=&quot;o&quot;&gt;]&lt;/span&gt;&lt;span class=&quot;p&quot;&gt;}{&lt;/span&gt;&lt;span class=&quot;nv&quot;&gt;\forall&lt;/span&gt;&lt;span class=&quot;nb&quot;&gt; x.&lt;/span&gt;&lt;span class=&quot;nv&quot;&gt;\varphi&lt;/span&gt;&lt;span class=&quot;p&quot;&gt;}$&lt;/span&gt;&lt;span class=&quot;k&quot;&gt;\\&lt;/span&gt;&lt;span class=&quot;na&quot;&gt;[3ex]&lt;/span&gt;
